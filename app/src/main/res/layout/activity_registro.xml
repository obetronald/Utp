<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d8000000"
    tools:context="com.example.guiautpbea.Registro">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="25dp"
      android:gravity="center"
      android:text="Registro Alumno"
      android:textColor="@android:color/background_light"
      android:textSize="30sp"
      android:textStyle="bold" />

  <EditText
      android:id="@+id/nombreRegistro"
      android:layout_width="230dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      android:hint="Nombre"
      android:singleLine="true"
      android:inputType="text"
      android:textColor="@android:color/background_light"
      android:textColorHighlight="@android:color/holo_blue_dark"
      android:textColorHint="@android:color/background_light"
      android:textColorLink="@android:color/holo_blue_dark" />

  <EditText
      android:id="@+id/apellidoRegistro"
      android:layout_width="230dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      android:hint="Apellido"
      android:singleLine="true"
      android:inputType="text"
      android:textColor="@android:color/background_light"
      android:textColorHighlight="@android:color/holo_blue_dark"
      android:textColorHint="@android:color/background_light"
      android:textColorLink="@android:color/holo_blue_dark" />

  <EditText
      android:id="@+id/telefonoRegistro"
      android:layout_width="230dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      android:hint="Telefono"
      android:maxLength="19"
      android:inputType="number"
      android:ems="9"
      android:drawableLeft="@drawable/ic_tel"
      android:drawablePadding="10dp"
      android:singleLine="true"
      android:textColor="@android:color/background_light"
      android:textColorHighlight="@android:color/holo_blue_dark"
      android:textColorHint="@android:color/background_light"
      android:textColorLink="@android:color/holo_blue_dark" />

  <EditText
      android:id="@+id/correoRegistro"
      android:layout_width="230dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      android:drawablePadding="10dp"
      android:hint="Correo"
      android:inputType="textEmailAddress"
      android:singleLine="true"
      android:drawableLeft="@drawable/ic_mail"
      android:textColor="@android:color/background_light"
      android:textColorHighlight="@android:color/holo_blue_dark"
      android:textColorHint="@android:color/background_light"
      android:textColorLink="@android:color/holo_blue_dark" />

  <EditText
      android:id="@+id/passwordRegistro"
      android:layout_width="230dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      android:hint="Password"
      android:singleLine="true"
      android:drawablePadding="10dp"
      android:drawableLeft="@drawable/ic_pass"
      android:inputType="textPassword"
      android:textColor="@android:color/background_light"
      android:textColorHighlight="@android:color/holo_blue_dark"
      android:textColorHint="@android:color/background_light"
      android:textColorLink="@android:color/holo_blue_dark" />

  <Button
      android:id="@+id/btnRegistro"
      android:layout_width="140dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="30dp"
      android:background="@drawable/btn_fondo_color"
      android:text="Registrar"
      android:textAlignment="center"
      android:textColor="@android:color/background_light"
      android:textSize="18sp" />

</LinearLayout>