<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aulas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imagenId"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

            <EditText
                android:id="@+id/edtHorario"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="ID" />

            <Button
                android:id="@+id/btnConsultar"
                android:text="ID"
                android:layout_weight="1"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:textSize="10sp"
                    android:layout_width="30dp"
                    android:textColor="@color/colorVerdeAbeto"
                    android:layout_height="wrap_content"
                    android:text="Area"/>

                <EditText
                    android:id="@+id/edtArea"
                    android:layout_width="62dp"
                    android:textSize="10sp"
                    android:hint=" "
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/colorVerdeAbeto"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="Descripcion"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/edtAreadescrip"
                    android:layout_width="250dp"
                    android:textSize="10sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="10sp"
                    android:layout_width="35dp"
                    android:textColor="@color/colorVerdeAbeto"
                    android:layout_height="wrap_content"
                    android:text="Estado"/>

                <EditText
                    android:id="@+id/edtEstado"
                    android:layout_width="62dp"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="10sp"
                    android:layout_width="45dp"
                    android:textColor="@color/colorVerdeAbeto"
                    android:layout_height="wrap_content"
                    android:text="Codigo Beacon"/>
                <EditText
                    android:id="@+id/edtCodbeacon"
                    android:layout_width="45dp"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:textSize="10sp"
                    android:layout_width="45dp"
                    android:textColor="@color/colorVerdeAbeto"
                    android:layout_height="wrap_content"
                    android:text="Nombre Beacon"/>
                <EditText
                    android:id="@+id/edtNombreBeacon"
                    android:layout_width="60dp"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:textSize="10sp"
                    android:layout_width="45dp"
                    android:textColor="@color/colorVerdeAbeto"
                    android:layout_height="wrap_content"
                    android:text="Fecha inicio"/>
                <EditText
                    android:id="@+id/edtFechainicio"
                    android:layout_width="60dp"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:textSize="10sp"
                    android:layout_width="45dp"
                    android:textColor="@color/colorVerdeAbeto"
                    android:layout_height="wrap_content"
                    android:text="Fecha fin"/>
                <EditText
                    android:id="@+id/edtFechafin"
                    android:textSize="10sp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    />


            </LinearLayout>
            <Button
                android:id="@+id/btnAgregar"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar" />
            <Button
                android:id="@+id/btnCargar"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargar" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
